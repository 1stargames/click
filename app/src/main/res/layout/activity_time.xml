<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/time_activity_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="games.onestar.speedclicking.ui.activities.MainActivity">

    <Button
        android:id="@+id/tenSecButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ten_sec_button"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/thirtySecButton"
        android:padding="20dp" />

    <Button
        android:id="@+id/thirtySecButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thirty_sec_button"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:padding="20dp" />

    <Button
        android:id="@+id/sixtySecButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sixty_sec_button"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirtySecButton"
        android:padding="20dp" />

</android.support.constraint.ConstraintLayout>
